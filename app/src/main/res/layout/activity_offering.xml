<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferingActivity"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/homeedit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tithes and Offerings"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginTop="-130dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginStart="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where to Contribute?"
            android:textSize="20sp"
            android:textStyle="bold"/>
        
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">
            <RadioButton
                android:id="@+id/option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Home church"
                android:textSize="20sp"
                android:textColor="@color/Lavender"/>
            <RadioButton
                android:id="@+id/option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host church"
                android:textSize="20sp"
                android:textColor="@color/Lavender"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select church to contribute "
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:contentDescription="choose church"/>
        <Button
            android:id="@+id/proceedbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="proceed"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Lavender"/>
    </LinearLayout>

</LinearLayout>